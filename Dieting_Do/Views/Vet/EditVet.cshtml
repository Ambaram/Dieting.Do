@model Dieting_Do.Models.VetDto
@{
    Layout = "_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Dieting.Do: Update Vet Details</title>
</head>
<body>
    <h2 class="text-center"> Update Vet Details</h2>
    <form method="post" action="Vet/UpdateVet/@Model.VetID">
        <div class="form-row">
            <div class="form-group col-md-6">
                <label for="Name"> First Name</label>
                <input type="text" class="form-control" name="fname" id="fname">
            </div>
            <div class="form-group col-md-6">
                <label for="organizer"> Last Name</label>
                <input type="text" class="form-control" name="lname" id="lname">
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-4">
                <label for="category"> Clinic Name</label>
                <input type="text" class="form-control" name="clinic" id="clinic" />
            </div>
            <div class="form-group col-md-4">
                <label for="fat"> Address</label>
                <select id="location" class="form-control" name="address">
                </select>
            </div>
            <div class="form-group col-md-4">
                <label for="fat"> Phone</label>
                <select id="location" class="form-control" name="phone">
                </select>
            </div>
        </div>
        <button type="submit" class="btn btn-primary">Update</button>
        <a class="btn btn-secondary" href="Vet/VetList">Back to List</a>
    </form>
</body>
</html>